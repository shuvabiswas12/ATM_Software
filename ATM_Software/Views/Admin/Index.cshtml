<section class="d-flex" id="admin">
    
    <partial name="_AdminSidenav"/>

    <div class="container my-1 mx-4" id="admin-main">
        <div class="row col-6">
            <div class="form-floating mt-4">
                <input type="text"
                       class="form-control"
                       id="normal-cash"
                       placeholder="Login" />
                <label for="normal-cash" class="mx-3">Login</label>
                <span class="text-muted">Login ID</span>
            </div>

            <div class="form-floating mt-4">
                <input type="number"
                       class="form-control"
                       id="normal-cash"
                       placeholder="PIN code" />
                <label for="normal-cash" class="mx-3">PIN code</label>
            </div>

            <div class="form-floating mt-4">
                <input type="text"
                       class="form-control"
                       id="normal-cash"
                       placeholder="Login" />
                <label for="normal-cash" class="mx-3">Holder's name</label>
            </div>

            <div class="form-floating mb-3 mt-4">
                <input type="number"
                       class="form-control"
                       id="normal-cash"
                       placeholder="Balance" />
                <label for="normal-cash" class="mx-3">Starting balance</label>
                <span class="text-muted">Example: 1000</span>
            </div>

            <div class="form-group mb-3 mt-4">
                <label class="label" for="type">Account's type</label>
                <select id="type"
                        name="accountType"
                        class="form-control">
                    <option value="1" selected>Savings</option>
                    <option value="2">Normal account</option>
                </select>
            </div>

            <div class="form-group mb-3 mt-4">
                <label class="label" for="status">Account status</label>
                <select id="status"
                        name="accountStatus"
                        class="form-control">
                    <option value="1" selected>Active</option>
                    <option value="2">Deactive</option>
                </select>
            </div>

            <div class="checkbox mt-2">
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           value=""
                           id="flexCheckDefault" />
                    <label class="form-check-label"
                           for="flexCheckDefault">
                        I want a recipt
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           value=""
                           id="flexCheckChecked"
                           checked />
                    <label class="form-check-label"
                           for="flexCheckChecked">
                        I’m sure I want to withdraw this amount
                    </label>
                </div>

                <div class="d-flex justify-content-end my-5">
                    <button class="btn btn-outline-success">
                        Create
                    </button>
                </div>

                <div>
                    &nbsp;
                </div>
            </div>
        </div>
    </div>
</section>