

<section class="d-flex" id="user">
    <partial name="_UserSidenav" />

    <div class="container mx-4 my-1">
        <div class="row col-8">
            <div class="form-floating mb-3 mt-4">
                <input type="text"
                       class="form-control"
                       placeholder="Example: 1234abc14453" />
                <label for="normal-cash" class="mx-3">Account Number</label>
                <span class="text-muted">Example: 1234abc14453</span>
            </div>

            <div class="form-floating mb-5">
                <input type="number"
                       class="form-control"
                       id="normal-cash"
                       placeholder="Example: 14000" />
                <label for="normal-cash" class="mx-3">Normal cash</label>
                <span class="text-muted">Example: 14000</span>
            </div>

            <div class="checkbox">
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           value=""
                           id="flexCheckDefault" />
                    <label class="form-check-label"
                           for="flexCheckDefault">
                        I want a recipt
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           value=""
                           id="flexCheckChecked"
                           checked />
                    <label class="form-check-label"
                           for="flexCheckChecked">
                        I’m sure I want to withdraw this amount
                    </label>
                </div>

                <div class="d-flex justify-content-end my-5">
                    <button class="btn btn-primary">Withdraw</button>
                </div>
            </div>
        </div>
    </div>

</section>
