@{
    ViewBag.Title = "User Login";
    var errorClass = " ";
    var isError = (ViewBag.IsError == null ? "false" : "true") as string;
    if (isError.Contains("true"))
    {
        errorClass = "border border-danger";
    }

    var returnUrl = @Context.Request.Query["ReturnUrl"];
}

@model LoginViewModel;

<partial name="_Usernav" />

<div class="half">
    <div class="bg order-1 order-md-2"></div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-6">
                    <div class="form-block">
                        <div class="text-center mb-5">
                            <h3>Login to <strong>ATM Software</strong></h3>
                        </div>
                        <form asp-controller="Account" asp-action="Login" method="post">

                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group first">
                                <label asp-for="LoginID"></label>
                                <input type="text" class="form-control @errorClass" placeholder="your LoginID" asp-for="LoginID">
                                <span class="text-danger" asp-validation-for="LoginID"></span>
                            </div>
                            <div class="form-group last mb-3 mt-3">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control @errorClass" placeholder="Your Pincode" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="d-sm-flex mb-5 align-items-center justify-content-between">
                                <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Pincode</a></span>
                            </div>

                            <input type="submit" value="Log In" class="btn btn-block btn-primary mb-3">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}