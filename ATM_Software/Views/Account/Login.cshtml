@{
}

@model LoginViewModel

<div class="half">
    <div class="bg order-1 order-md-2"></div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-6">
                    <div class="form-block">
                        <div class="text-center mb-5">
                            <h3>Login to <strong>ATM Software</strong></h3>
                        </div>
                        <form asp-controller="Account" asp-action="Login" method="post">
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group first">
                                <label asp-for="Email"></label>
                                <input type="text" class="form-control" placeholder="your-email@gmail.com" asp-for="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Your Password" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="d-sm-flex mb-5 align-items-center">
                                <label asp-for="RememberMe" class="control control--checkbox mb-3 mb-sm-0">
                                    <span class="caption">@Html.DisplayNameFor(m => m.RememberMe)</span>
                                    <input type="checkbox" checked="checked" asp-for="RememberMe" />
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>
                            </div>

                            <input type="submit" value="Log In" class="btn btn-block btn-primary mb-3">

                        </form>
                        <a asp-controller="Account" asp-action="Register" class="text-center d-block">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}